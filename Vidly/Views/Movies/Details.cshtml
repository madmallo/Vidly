@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            Genre:
        </dt>
        <dd>
            @Model.Genre.Name
        </dd>

        <dt>
            Release Date:
        </dt>
        <dd>
            @Model.ReleaseDate.ToLongDateString()
        </dd>

        <dt>
            Date Added:
        </dt>
        <dd>
            @Model.DateAdded.ToLongDateString()
        </dd>

        <dt>
            Number in Stock:
        </dt>
        <dd>
            @Model.NumberInStock
        </dd>

    </dl>
</div>